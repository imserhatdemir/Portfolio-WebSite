@model EntityLayer.Concrete.Feature 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Ekle</h4>
            <p class="card-description">
                Yeni Yetenek Ekle
            </p>
            @using (Html.BeginForm("Index", "Feature", FormMethod.Post, new { @class = "form-sample" }))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Header</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Header)

                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">İsim</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)

                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Unvan</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Title)

                    </div>
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>

            }
        </div>
    </div>
</div>

