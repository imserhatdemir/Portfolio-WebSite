@model EntityLayer.Concrete.Portfolios
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Ekle</h4>
            <p class="card-description">
                Yeni Yetenek Ekle
            </p>
            @using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post, new { @class = "form-sample" }))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">İş</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Title)

                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Pozisyon</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Görsel Yolu</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Image)

                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Teknoloji</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Platform, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Platform)

                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Devam ediyorum</label>
                    <div class="col-sm-9">
                        @Html.CheckBoxFor(x => x.Status, new { @class = "form-check-input" })
                    </div>
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>

            }
        </div>
    </div>
</div>

