@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Güncelle</h4>
            <p class="card-description">
                Hizmet Güncelle
            </p>
            @using (Html.BeginForm("EditService", "Service", FormMethod.Post, new { @class = "form-sample" }))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Hizmet Adı</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Görsel Yolu</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Image)
                    </div>
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>

            }
        </div>
    </div>
</div>

