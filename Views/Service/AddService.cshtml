@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İş Ekle</h4>
            <p class="card-description">
                Yeni İş Ekle
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Hizmet Adı</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="exampleInputUsername2" name="Title" placeholder="İş">
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Görsel Yolu</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="exampleInputUsername2" name="Image" placeholder="Pozisyon">
                        @Html.ValidationMessageFor(x => x.Image)
                    </div>
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

