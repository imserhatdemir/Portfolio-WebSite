@using EntityLayer.Concrete
@model List<Portfolios>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Platform </th>
                                <th> URL </th>
                                <th> Durum </th>
                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    <img src="@item.Image" alt="image" />
                                    <span class="pl-2">@item.Title</span>
                                </td>
                                <td> @item.Platform </td>
                                <td> @item.Url </td>
                                <td>
                                    @if (item.Status == true)
                                    {
                                        <div class="badge badge-outline-success">Yayında</div>

                                    }
                                    else
                                    {
                                        <div class="badge badge-outline-danger">Yayında Değil</div>

                                    }
                                </td>
                                <td>
                                    <a href="/Portfolio/EditPortfolio/@item.Id" class="btn btn-info">Güncelle</a> || <a href="/Portfolio/DeletePortfolio/@item.Id" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
