@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Ekle</h4>
            <p class="card-description">
                Yeni Yetenek Ekle
            </p>
            @using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post, new { @class = "form-sample" }))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">İş</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Pozisyon</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Görsel Yolu</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Başlama Tarihi</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Date, new { @type = "date", @class="form-control"})
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Çıkış Tarihi</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.DateFinish, new { @type = "date", @class="form-control"})
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Devam ediyorum</label>
                    <div class="col-sm-9">
                        @Html.CheckBoxFor(x => x.Continued, new { @class = "form-check-input" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Devam ediyorum</label>
                    <div class="col-sm-9">
                        @Html.TextAreaFor(x => x.Description,20,10, new { @class = "form-control" })
                    </div>
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>

            }
        </div>
    </div>
</div>

